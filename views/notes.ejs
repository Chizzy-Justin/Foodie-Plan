<%- include('header') %>

  

  <section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container text-center mb-5">
            <h2>Your Notes So Far!</h2>
        </div>
        <% if (notes && notes.length > 0) { %>
            <div class="row">
              <% notes.slice().forEach(note => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary"><%- note.title %></h5>
                                <p class="card-subtitle mb-2 text-muted">
                                    <i class="fa fa-calendar"></i> <%= note.created_at.toLocaleDateString('en-CA') %>
                                </p>
                                <p class="card-text">
                                    <% if (note.note.length > 100) { %>
                                        <%= note.note.substring(0, 100) %>... 
                                        <a href="javascript:void(0)" class="fw-bold text-primary text-decoration-none" onclick="showModal('<%- escape(note.title) %>', '<%- escape(note.note) %>')">
                                          Read More
                                      </a>
                                      
                                    <% } else { %>
                                        <%- note.note %>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center text-muted">No notes available.</p>
        <% } %>
    </div>
</section>


  <div class="modal fade" id="noteModal" tabindex="-1" aria-labelledby="noteModalLabel" aria-hidden="true">
